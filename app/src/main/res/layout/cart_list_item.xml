<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currentCartProduct"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="4dp"
    android:background="@drawable/gradient"
    android:paddingBottom="50dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_marginStart="84dp"
                android:layout_marginEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/offerPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge" />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/numberOfProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter quantity"
                    android:inputType="numberSigned"
                    android:text="1"
                    />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/incrementButton"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_arrow_up_24dp"
                        android:padding="5dp" />

                    <Button
                        android:id="@+id/decrementButton"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_arrow_down_24dp"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/delivery_switch"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/white"
                        android:text="Delivery"
                        android:layout_marginBottom="2dp"
                        android:textSize="13dp"
                        android:padding="5dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/setup_switch"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Setup"
                        android:background="@android:color/white"
                        android:textSize="13dp"
                        android:padding="5dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>