<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="We'd love to hear from you"
        android:textColor="@android:color/darker_gray"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Whether you have question about feature,trial,pricing or anything else we are here to answer all your questions"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Contact us by"
        android:textColor="#1AA4FF"
        android:textSize="35dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/emailContact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/email"
        android:text="E-mail"
        android:textSize="15dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/black" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/phoneContact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/phone"
        android:textSize="15dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        android:text="Phone"
        android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>